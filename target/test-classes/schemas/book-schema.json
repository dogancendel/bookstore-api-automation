{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "title", "pageCount", "publishDate"],
  "properties": {
    "id": {"type": "integer"},
    "title": {"type": "string"},
    "description": {"type": "string"},
    "pageCount": {"type": "integer"},
    "excerpt": {"type": "string"},
    "publishDate": {"type": "string", "format": "date-time"}
  }
}
